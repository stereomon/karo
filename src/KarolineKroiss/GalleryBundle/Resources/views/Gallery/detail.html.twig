{% extends '::base.html.twig' %}

{% block body %}
    <style>
        .galleria {
            width: 100%; height: 750px; background: #000;;
        }
        .galleria-stage {
            bottom: 140px;
        }
        .galleria-thumbnails-container {
            height: 130px;
        }

        .galleria-thumbnails .galleria-image {
            height: 120px;
        }
        .gallery-text {
            text-align: center;
            background: #000;
            color: #fff;
            padding: 10px 0 2px 8px;
            margin: 0;
        }
    </style>
    <div class="row">
        {{ if similar }}
        <p class="gallery-text"><strong>Ã„hnliche Bilder</strong></p>
        <div class="galleria">
            {% for image in similar %}
                <a href="{{ image.webPathPreview|file }}">
                    <img src="{{ image.webPathThumbnail|file }}" data-title="{{ image.title }}" data-link="{{ path('karoline_kroiss_gallery_image', {'id': image.id}) }}">
                </a>
            {% endfor %}
        </div>
        {{ endif }}
    </div>
    <script src="{{ asset('bundles/karolinekroissgallery/js/galleria/galleria-1.3.6.min.js') }}" type="text/javascript"></script>
    <script>
        Galleria.loadTheme('{{ asset('bundles/karolinekroissgallery/js/galleria/themes/classic/galleria.classic.min.js') }}');
        Galleria.run('.galleria');
    </script>
{% endblock %}
